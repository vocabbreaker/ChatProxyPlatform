# Auth Service Configuration
# Copy this file to .env and adjust values
# IMPORTANT: After git clone, run: copy .env.example .env

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# JWT CONFIGURATION
# ============================================
# CRITICAL: Generate unique secrets using:
#   Automated: generate_secrets.bat
#   OR Node.js: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST be the same across auth-service, accounting-service, and flowise-proxy!
JWT_ACCESS_SECRET=your_generated_access_secret_here_must_be_same_across_services
JWT_REFRESH_SECRET=your_generated_refresh_secret_here_must_be_same_across_services
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# MONGODB CONFIGURATION
# ============================================
MONGODB_URI=mongodb://mongodb-auth:27017/auth_db
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123

# ============================================
# EMAIL CONFIGURATION (MailHog for development)
# ============================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@chatproxy.local

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3082,http://localhost:3002,http://localhost:8000
CORS_CREDENTIALS=true

# ============================================
# SERVICE URLS
# ============================================
ACCOUNTING_SERVICE_URL=http://accounting-service:3001
FRONTEND_URL=http://localhost:3082

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15m

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/auth-service.log
