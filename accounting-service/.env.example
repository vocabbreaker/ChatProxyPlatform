# Accounting Service Configuration
# Copy this file to .env and adjust values
# IMPORTANT: After git clone, run: copy .env.example .env

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# JWT CONFIGURATION
# ============================================
# CRITICAL: Must use the SAME values as auth-service and flowise-proxy!
# Generate using: generate_secrets.bat
JWT_ACCESS_SECRET=your_generated_access_secret_here_must_be_same_across_services
JWT_REFRESH_SECRET=your_generated_refresh_secret_here_must_be_same_across_services

# ============================================
# POSTGRESQL CONFIGURATION
# ============================================
DB_HOST=postgres-accounting
DB_PORT=5432
DB_NAME=accounting
DB_USER=postgres
DB_PASSWORD=postgres123
DB_DIALECT=postgres
DB_LOGGING=false

# PostgreSQL Root Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=accounting

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3082,http://localhost:8000
CORS_CREDENTIALS=true

# ============================================
# SERVICE URLS
# ============================================
AUTH_SERVICE_URL=http://auth-service:3000

# ============================================
# CREDIT SYSTEM
# ============================================
DEFAULT_TEACHER_CREDITS=5000
DEFAULT_STUDENT_CREDITS=1000
DEFAULT_ADMIN_CREDITS=999999
MINIMUM_CREDIT_THRESHOLD=0

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/accounting-service.log

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
